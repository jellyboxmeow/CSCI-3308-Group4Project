<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Guides</title>
</head>
<body>
    <h1>Manage Guides</h1>
    <form action="/admin/guides" method="POST">
        <label for="title">Guide Title:</label>
        <input type="text" id="title" name="title" required>
        <label for="content">Content:</label>
        <textarea id="content" name="content" required></textarea>
        <button type="submit">Add Guide</button>
    </form>

    <h2>Existing Guides</h2>
    <ul>
        {{#each guides}}
        <li>
            <strong>{{this.title}}</strong>: {{this.content}}
            <form action="/admin/guides/edit/{{this.id}}" method="POST" style="display:inline;">
                <input type="text" name="title" value="{{this.title}}" required>
                <textarea name="content" required>{{this.content}}</textarea>
                <button type="submit">Edit</button>
            </form>
            <form action="/admin/guides/delete/{{this.id}}" method="POST" style="display:inline;">
                <button type="submit">Delete</button>
            </form>
        </li>
        {{/each}}
    </ul>
</body>
</html>
