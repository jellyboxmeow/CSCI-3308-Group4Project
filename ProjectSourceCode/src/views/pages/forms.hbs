<head>
    <style>
        .forms-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(18rem, 1fr));
            gap: 1rem;
        }

        .card {
            border: 1px solid #ccc;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

        .card:hover {
            transform: scale(1.05);
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .card-subtitle {
            font-size: 1rem;
            color: #6c757d;
        }

        .card-desc {
            font-size: 1rem;
            margin-top: 1rem;
        }

        .card-username-date {
            font-size: 0.8rem;
            color: #6c757d;
            margin-top: 1rem;
        }

        .modal-content {
            border-radius: 10px;
        }

        .modal-header {
            border-bottom: 1px solid #ccc;
        }

        .modal-footer {
            border-top: 1px solid #ccc;
        }

        .form-label {
            font-size: 1.2rem;
            font-weight: bold;
        }

        .form-control {
            margin-top: 0.5rem;
            margin-bottom: 1rem;
        }

        .form-select {
            margin-top: 0.5rem;
            margin-bottom: 1rem;
        }

        .text-danger {
            font-size: 0.8rem;
            color: red;
            margin-top: 0.5rem;
        }

        .alert {
            margin-top: 1rem;
        }
        .bg-img{
            background-image: url('https://pokemonrevolution.net/forum/uploads/monthly_2021_03/DVMT-6OXcAE2rZY.jpg.afab972f972bd7fbd4253bc7aa1cf27f.jpg');
            min-height: 100%;
        }
        .card-img{
            background-image: url('https://pbs.twimg.com/media/F3pdcQJXgAAWGVj?format=jpg&name=medium');
            min-height: 100%;
        }
    </style>
</head>

<!-- Background image -->
<div class="bg-img w3-display-container" id="forms">
    <div class="w3-display-middle" style="white-space:nowrap;">
    </div>

<div class="container-fluid my-5">
    <h1 class="fw-bold text-decoration-underline" style = "color: orange">Forms</h1>
    <div class=""></div>
    <div class="forms-grid" id="forms-gridy">
        {{#each forms}}
        <div class="card" style="width: 18rem;height: 20rem;">
            <div class="card-body">
                <h5 class="card-title">{{this.form_name}}</h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">{{this.form_type}}</h6>
                <p class="card-desc">{{this.form_description}}</p>
                <p class="card-username-date">{{this.form_user}} {{formatDate this.form_date}}</a>
            </div>
        </div>
        {{/each}}
        
        <div type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#formModal"
            style="width:18rem;height:20rem;">
            <div class="card-body">
                <h5 class="card-title">Add Form</h5>
                <h1 class="card-subtitle mb-2 text-body-secondary">+</h1>
            </div>
        </div>
    </div>

    <div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="formModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModalLabel">Add a New Form</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addCommForm">
                        <input type="hidden" id="currUsername" value="{{user.username}}">
                        <label for="formName" class="form-label">Form Title</label>
                        <input type="text" class="form-control" id="formName" name="formName" required
                            placeholder="Enter Title">
                        <label for="formType" class="form-label">Form Type</label>
                        <select class="form-select" id="formType" aria-label="Form Type Selection">
                            <option value="0" selected>Select a Type</option>
                            <option value="Trading">Trading</option>
                            <option value="Showcase">Showcase</option>
                            <option value="Collection">Collection</option>
                            <option value="Tournaments">Tournaments</option>
                            <option value="LFG">LFG</option>
                        </select>
                        <label for="formDesc" class="form-label">Form Description</label>
                        <textarea type="text" class="form-control" id="formDesc" name="formDesc" required
                            placeholder="Enter Description"></textarea>
                        <div class="text-danger" id="error-message" style="display: none;">
                            <small>This is where messages go</small>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary" id="addFormBtn">Add Form</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="formModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModalLabel">Add a New Form</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addCommForm">
                        <input type="hidden" id="currUsername" value="{{user.username}}">
                        <label for="formName" class="form-label">Form Title</label>
                        <input type="text" class="form-control" id="formName" name="formName" required
                            placeholder="Enter Title">
                        <label for="formType" class="form-label">Form Type</label>
                        <select class="form-select" id="formType" aria-label="Form Type Selection">
                            <option value="0" selected>Select a Type</option>
                            <option value="Trading">Trading</option>
                            <option value="Showcase">Showcase</option>
                            <option value="Collection">Collection</option>
                            <option value="Tournaments">Tournaments</option>
                            <option value="LFG">LFG</option>
                        </select>
                        <label for="formDesc" class="form-label">Form Description</label>
                        <textarea type="text" class="form-control" id="formDesc" name="formDesc" required
                            placeholder="Enter Description"></textarea>
                        <div class="text-danger" id="error-message" style="display: none;">
                            <small>This is where messages go</small>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary" id="addFormBtn">Add Form</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>



    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>

    <script>
        // JavaScript for handling form submission and validation
        document.getElementById('addCommForm').addEventListener('submit', function (event) {
            event.preventDefault();  // Prevent the default form submission

            const form_user = document.getElementById('currUsername').value; // Get the current user's usn from the hidden input
            const form_name = document.getElementById('formName').value;
            const form_type = document.getElementById('formType').value;
            const form_description = document.getElementById('formDesc').value;
            const errorMessage = document.getElementById('error-message');

            errorMessage.style.display = 'none';
            // Simple check to check if username is empty
            if (form_name.trim() === '') {
                errorMessage.style.display = 'block';
                errorMessage.innerText = 'Please enter a valid title.';
                return;  // Stop form submission if validation fails
            } else if (form_type === "0") {  // Check for invalid form type
                errorMessage.style.display = 'block';
                errorMessage.innerText = 'Please select a valid form type.';
                return;
            } else if (form_description.trim() === '') {
                errorMessage.style.display = 'block';
                errorMessage.innerText = 'Please enter a form description.';
                return;
            }
            else {
                errorMessage.style.display = 'none';

                // Send the data to the server using fetch API
                fetch('/add-form', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ form_user, form_name, form_type, form_description }) // Sending the user ID and friend's username
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Close the modal after adding the friend successfully
                            var modal = bootstrap.Modal.getInstance(document.getElementById('formModal'));
                            modal.hide();

                            // Show success message
                            const successMessage = document.createElement('div');
                            successMessage.classList.add('alert', 'alert-success');
                            successMessage.innerText = data.message || 'Added form successfully!';
                            document.querySelector('.container-fluid').prepend(successMessage);

                            // Remove the success message after 3 seconds
                            setTimeout(() => successMessage.remove(), 3000);
                            console.log(data);

                            // Dynamically add the new friend to the friend list
                            const formsGrid = document.getElementById('forms-gridy');
                            const newCard = document.createElement('div');
                            newCard.classList.add('card');
                            newCard.style.width = '18rem';
                            newCard.style.height = '20rem';
                            newCard.innerHTML = `
                    <div class="card-body">
                        <h5 class="card-title">${data.form.form_name}</h5>
                        <h6 class="card-subtitle mb-2 text-body-secondary">${data.form.form_type}</h6>
                        <p class="card-desc">${data.form.form_description}</p>
                        <p class="card-username-date">${data.form.form_user} ${new Date().toISOString().split('T')[0]}</p>
                    </div>
                `;
                            formsGrid.insertBefore(newCard, formsGrid.lastElementChild);
                            //formsGrid.appendChild(newCard);

                            // Reset the form inputs
                            document.getElementById('formName').value = '';
                            document.getElementById('formType').value = "0";
                            document.getElementById('formDesc').value = '';
                            console.log('Form added successfully!');
                        } else {
                            // Show an error message if something went wrong
                            console.error('Failed to add form:', data.message);
                            errorMessage.style.display = 'block';
                            errorMessage.innerText = data.message || 'Failed to add form.';
                        }
                    })
                    .catch(error => {
                        console.error('Error adding form:', error);
                    });
            }
        });
    </script>